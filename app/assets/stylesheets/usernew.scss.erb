.actions-button {
  display       : inline-block;
  border-radius : 8%;
  font-size     : 10pt;
  text-align    : center;
  padding       : 12px 52px;
  background    : #99ccff;
  color         : rgba(51, 0, 51, 0.56);
  box-shadow    : 4px 4px 27px #99ccff;
  border        : 2px solid #99ccff;
}


.actions-button :hover {
  box-shadow    : none;
}