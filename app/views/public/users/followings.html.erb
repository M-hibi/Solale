<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="d-flex justify-content-between">
        <h3>あなたが気にかけている人（フォロー）一覧</h3>
      </div>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>なまえ</th>
          <th>自己紹介</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <div>
          <tr>
            <th><%= link_to user_path(user) do %>
            <%= user.name %><% end %></th>
            <th><%= user.introduction %></th>
            <th colspan="3"></th>
          </tr>   
        </div>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>