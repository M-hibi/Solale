<%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <h2 class="mt-3">Share the Solale！</h2>
  <div class="row no-gutters">
    <div class="col-8 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h5 class="text-dark bg-light p-4 mb-0">Solaleを投稿する</h5>
      <div class="form-body p-4 bg-light">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>

        <%= form_with model: @post do |f| %>
        <label class="form-image mb-3">
          <span class="btn btn-primary">ファイルを選択</span>
          <%= f.file_field :image, id:"item-image", class:"hidden" %>
        </label>

        <div>このSolaleにタグをつけましょう</div>
          <div><%= f.text_field :tag_names, class: "form-control", placeholder: "東京,夕方" %></div>
          <br><br>
          <div><%= f.submit value="Solaleを投稿する" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>