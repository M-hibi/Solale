<div class="container">
  <h2 class="mt-3">Share the Solale</h2>
  <div class="row no-gutters">
    <div class="col-8 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h5 class="text-dark bg-light p-4 mb-0">Solale image</h5>
      <div class="form-body p-4 bg-light">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <%= form_with model: @post do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %><br><br>
          <div class="row g-3 align-items-center">
            <div class="col-auto">このSolaleにタグをつけましょう</div>
            <div class="col-auto"><%= f.text_field :tag_names, class: "form-control ", placeholder: "東京,夕方" %></div>
          </div><br><br>
          <div><%= f.submit value="Solaleを投稿する" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>