<div class="container">
  <% if user_signed_in? %>
    <% if @notifications.present? %>
      <h3>通知一覧</h3>
      <%= link_to "削除",notification_path(@notifications), method: :delete,class:"btn btn-light" %>
      <% @notifications.each do |notification| %>
          <%= render "#{notification.action_type}", notification: notification %>
      <% end %>
    <% else %>
    <div class="row justify-content-center, border border-info" >
      <p>通知はありません</p>
    </div>
    <% end %>
  <% end %>
  <h3>みんなのSolale</h3>
  <%= render 'list', posts: @posts %>
</div>