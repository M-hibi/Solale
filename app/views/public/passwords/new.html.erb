<%= stylesheet_link_tag 'usernew', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-10 mx-auto">

    <h5>パスワードを再設定しましょう</h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "public/shared/error_messages.html.erb", resource: resource %>

      <div class="field mt-3">
        <%= f.label :登録したメールアドレス, class: "translatable-text" %>
        <%= f.email_field :email, autofocus: true, class: "form-control w-25" %>
      </div>

      <div class="actions mt-5">
        <%= button_tag(type: 'submit', class: "btn btn-secondary translatable-text") do %>
          パスワード再設定メールを送信
        <% end %>
      </div>

    <% end %>

    </div>
  </div>
</div>