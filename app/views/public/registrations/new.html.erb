<%= stylesheet_link_tag 'usernew', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-10 mx-auto">
    　<h2>Solaleにようこそ</h2>
    <div class="col-10 mx-auto py-5">
      <div class="px-5 grid gap-3">
        <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= devise_error_messages %>

          <div class="field">
            Solaleで名乗るなまえを教えてください<br>
            <%= f.text_field :name %>
          </div>

          <div class="field mt-3">
            メールアドレスを教えてください<br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-3">
            パスワードを決めてください
            <% if @minimum_password_length %>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "new-password" %>
            (<%= @minimum_password_length %>文字以上)
          </div>

          <div class="field mt-3">
            確認のためもう一度パスワードを入れてください<br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-5">
            <%= f.submit "Solaleの仲間になる", class: "actions-button" %>
          </div>
        <% end %>
  　　　</div>
　　</div>
　</div>
</div>